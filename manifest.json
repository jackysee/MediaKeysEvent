{ "manifest_version": 2
, "name": "MediaKeysEvent"
, "version": "1.0"
, "description": "Send event to page for media keys"
, "background": { "scripts": [ "mediaKeysEvent.js" ] }
, "content_scripts":
    [ { "matches": ["*://*/*"]
      , "js": [ "app.js" ]
      , "run_at": "document_idle"
      }
    ]
, "commands":
    { "play-pause" :
        { "suggested_key": 
            { "default": "Ctrl+Shift+0" }
        , "description": "Send play-pause"
        , "global": true
        }
    }
}
